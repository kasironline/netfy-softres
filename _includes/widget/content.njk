{% if cover %}<img class="img-fluid" alt="{{ description }}" width="100%" height="100%" src="{{ cover }}"/>{% endif %}
<h1><strong><a href="{{page.url}}">{{ title }}</a></strong></h1>
<h2>{{description}}</h2>
<p class="bg-light p-1 rounded"><small>
{%- for tag in tags | filterTagList -%}
{%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
<a href="{{ tagUrl | url }}">{{ tag }}&nbsp;</a>
{%- endfor %}
</small>
</p>
{% if video %}
<div class="ratio ratio-16x9 mb-3">
  <iframe class="rounded" src="https://www.youtube.com/embed/{{video}}" title="{{description}}" allowfullscreen></iframe>
</div>
{% endif %}