<div class="row justify-content-center">
{% for post in postslist | reverse %}
 <a href="{{ post.url | url }}" class="col-md-4 p-3 p-md-5">
{% if post.data.cover %}<img loading="lazy" class="img-fluid" alt="{{ post.data.title }}" width="100%" height="100%" src="{{ post.data.cover }}"/>{% endif %}
<p><strong>{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</strong></p>
<p class="text-dark"><small>{% if post.data.description %}{{ post.data.description }}{% endif %}</small></p>
</a>
{% endfor %}
</div>
